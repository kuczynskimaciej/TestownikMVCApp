@model QuestionModel
@{
    ViewData["Title"] = "Testownik";
}


<form asp-controller="Home" asp-action="CheckAnswers" FormMethod="post">
    @{
        <h1>
            @Model.Question<br />
        </h1>
        var countOfCorrectAnswers = Model.Answers.Where(x => x.IsCorrect).Count();

        <input type="hidden" asp-for="Question" />

        for (int x = 0; x < Model.Answers.Count(); x++)
        {
            <input type="hidden" asp-for="@Model.Answers[x]" />
            <input type="hidden" asp-for="@Model.Answers[x].Answer" />
            <input type="hidden" asp-for="@Model.Answers[x].IsCorrect" />


            if (countOfCorrectAnswers == 1)
            {
                <input type="radio" value="true" /> @Model.Answers[x].Answer <br />
            }
            else
            {
                <input type="checkbox" value="true" /> @Model.Answers[x].Answer <br />
            }
        }

        <input type="submit" value="Wybierz" />
    }
</form>